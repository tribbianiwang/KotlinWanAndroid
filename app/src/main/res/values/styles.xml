<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_red</item>
        <item name="colorPrimaryDark">@color/theme_red</item>
        <item name="colorAccent">@color/theme_red</item>
    </style>


    <style name="FinalsDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@android:color/transparent</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimAmount">0</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimaryDark">@color/theme_red</item>
        <item name="colorAccent">@color/theme_red</item>
        <!-- Customize your theme here. -->
        <!--Appbar背景色-->
        <!--<item name="colorPrimary">@color/background</item>-->
        <!--状态栏颜色-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <item name="colorPrimaryDark">@color/theme_red</item>
        <!--&lt;!&ndash;控制各个控件被选中时的颜色&ndash;&gt;-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <!--&lt;!&ndash; 避免控件会顶到状态栏上 &ndash;&gt;-->
        <item name="android:windowContentTransitions">true</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <!--<item name="android:fitsSystemWindows">true</item>-->
        <!--&lt;!&ndash;为true 状态栏浅色字体自动深色只在6.0以上有效果&ndash;&gt;-->

    </style>



</resources>
