<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

<LinearLayout

    android:id="@+id/view_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/app_margin_left"
    android:paddingLeft="@dimen/app_margin_left"
    android:paddingRight="@dimen/app_margin_left"
    android:foreground="?selectableItemBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/design_text_black"
        android:textSize="@dimen/small_middle_text_size"
        />

    <LinearLayout
        android:layout_marginTop="@dimen/app_margin_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/app_margin_small"
        android:gravity="bottom"
        >
        <TextView
            android:background="@drawable/strock_gray_bg"
            android:id="@+id/tv_super_chapter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/micro_small_text_size"
            android:textColor="@color/design_text_gray"
            android:paddingLeft="@dimen/margin_5dp"
            android:paddingRight="@dimen/margin_5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"

            />

        <TextView
            android:layout_marginLeft="@dimen/app_margin_small"
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/theme_red"
            />

        <TextView
            android:gravity="end"
            android:layout_marginLeft="@dimen/app_margin_small"
            android:id="@+id/tv_time"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/micro_small_text_size"
            android:textColor="@color/design_text_gray"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/alpha_gray_white"
        />

</LinearLayout>

    <Button
        android:foreground="?selectableItemBackground"
        android:id="@+id/bt_delete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/theme_red"
        android:text="@string/string_delete"
        android:textColor="@android:color/white"/>

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>