<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_red"
        android:orientation="horizontal"
        >
        <TextView
            android:paddingTop="@dimen/app_margin_right"
            android:paddingBottom="@dimen/app_margin_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_middle_text_size"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/app_margin_left"
            android:text="Android"
            android:textStyle="bold"
            />

        <EditText
            android:layout_marginTop="@dimen/margin_7dp"
            android:layout_marginBottom="@dimen/margin_7dp"
            android:layout_marginLeft="@dimen/app_margin_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/string_input_search"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/design_text_black"
            android:textColorHint="@color/design_text_gray"
            android:paddingLeft="@dimen/app_margin_left"
            android:background="@drawable/bg_cornor_white_rectangular"
            ></EditText>

        <TextView
            android:paddingTop="@dimen/app_margin_right"
            android:paddingBottom="@dimen/app_margin_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_middle_text_size"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/app_margin_left"
            android:layout_marginRight="@dimen/app_margin_right"
            android:text="搜索"
            android:textStyle="bold"
            />




    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_home_articles"
        />

</LinearLayout>